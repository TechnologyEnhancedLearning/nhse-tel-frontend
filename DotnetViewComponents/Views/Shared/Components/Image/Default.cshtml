@using DotnetViewComponents.ViewModels
@model ImageViewModel

<figure class="nhsuk-image">
    <img class="nhsuk-image__img" src="@Model.Src" alt="@Model.Alt" sizes="@Model.Sizes" srcset="@Model.SrcSet" @(Model.AdditionalAttributes != null ? Model.AdditionalAttributes : "")>
    <figcaption class="nhsuk-image__caption">
        @Model.Caption
    </figcaption>
</figure>
